@model teste.Models.ModeloVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="background-color:black; opacity: 0.8; width: 253px; height: 310px; border: double;">
    <div class="row" style="margin-left: -15px; margin-right: 15px;">

        <span style="text-align:center; color: cornflowerblue; opacity: 1; margin-left: 20%; margin-top: 2%; font-size: 20px;"><b>Qual o seu carro?</b></span>
        <select class="col-md-12" id="ddlCarro" style="border-radius:7px; width:220px; margin-top: 20%; margin-left: 6%;  height: 40px;">
            <option>Marca</option>
            @foreach (var carro in Model.Carro)
            {
                <option value="@carro.Id">@carro.MarcaCarro</option>
            }
        </select>
        @*<label>Selecione um modelo</label>*@
        <select class="col-md-12" id="ddlModelo" style="border-radius:7px; width:220px; margin-top: 15%; margin-left: 6%;  height: 40px;">
            <option>Modelo</option>
               @*Carregado via Ajax*@
        </select>

        <div class="col-md-12">
            <button class="btn-primary btnTeste" style="border-radius:7px; border: none; margin-top: 20%; margin-left: 34%; width: 100px; height: 40px;">Buscar</button>
        </div>
    </div>
</div>

<script src="~/Scripts/Carro/Carro.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).on('change', '#ddlCarro', function () {
        var id = $('#ddlCarro').val();
        $.ajax({
            url: '/Carro/Listar',
            contentType: 'application/json;charset=utf-8',
            data: {'idCarro': id },
            success: function (data) {
                var options = '<option value="0">Modelo</option>';
                for (var i = 0; i < data.data.length; i++) {
                    options += '<option value="' + data.data[i].Id + '">' + data.data[i].ModeloCarro + '</option>';
                }
                var modelo = $('#ddlModelo');
                modelo.html(options);                
            },
            error: function () {
                console.log("erro")
            }
        })

    });

